<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.nus.iss.mtech.ptsix.medipal.presentation.fragment.PersonalBioViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/userNameViewLabel"
            style="@style/AppTextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name" />

        <TextView
            android:id="@+id/userNameViewText"
            style="@style/AppTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/userIDNoViewLabel"
            style="@style/AppTextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID No" />

        <TextView
            android:id="@+id/userIDNoViewText"
            style="@style/AppTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0" />

        <TextView
            android:id="@+id/userDOBViewLabel"
            style="@style/AppTextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Of Brith" />

        <TextView
            android:id="@+id/userDOBViewText"
            style="@style/AppTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/addressViewLabel"
            style="@style/AppTextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adress" />

        <TextView
            android:id="@+id/addressViewText"
            style="@style/AppTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/postalCodeViewText"
            style="@style/AppTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/heightViewLabel"
            style="@style/AppTextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height" />

        <TextView
            android:id="@+id/heightViewText"
            style="@style/AppTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bloodTypeViewLabel"
            style="@style/AppTextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Type" />

        <TextView
            android:id="@+id/bloodTypeViewText"
            style="@style/AppTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--</ScrollView>-->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabUpdatePersonalBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_edit_white" />

</FrameLayout>
