<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.nus.iss.mtech.ptsix.medipal.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        android:longClickable="false"
        android:minHeight="?attr/actionBarSize"
        android:title="Medipal"
        android:titleMargin="@dimen/nav_header_height"
        android:titleTextColor="@color/cardview_light_background"
        app:logo="@drawable/ic_app_icon"
        app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Menu"
        app:subtitleTextColor="@color/colorPrimary_light"
        app:titleMarginStart="@android:dimen/app_icon_size"
        app:titleTextAppearance="@style/AppExtraLargeText"
        app:titleTextColor="@color/cardview_light_background"></android.support.v7.widget.Toolbar>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:padding="10dp"
        android:stretchMode="columnWidth"
        android:textAlignment="center"
        android:verticalSpacing="10dp" />

</RelativeLayout>
