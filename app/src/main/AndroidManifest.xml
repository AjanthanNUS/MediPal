<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.nus.iss.mtech.ptsix.medipal">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.activity.AppointmentActivity" />
        <activity android:name=".presentation.activity.ConsumptionActivity" />
        <activity android:name=".presentation.activity.MedicineActivity" />
        <activity android:name=".presentation.activity.CategoriesActivity" />
        <activity
            android:name=".presentation.activity.AppointmentDetailActivity"
            android:parentActivityName=".presentation.activity.AppointmentActivity" />

        <receiver android:name=".business.services.AppointmentAlarmReceiver" />

        <service android:name=".business.services.AppointmentReminder" />

        <receiver android:name=".business.services.ConsumptionAlarmReceiver" />

        <service android:name=".business.services.ConsumptionReminder" />

        <receiver android:name=".business.services.MedicineReplenishAlarmReceiver" />

        <service android:name=".business.services.MedicineReplenishReminder" />

        <activity android:name=".presentation.activity.PersonalActivity"></activity>
    </application>

</manifest>